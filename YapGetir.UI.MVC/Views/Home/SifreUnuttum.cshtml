
@{
    ViewBag.Title = "SifreUnuttum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model UyeFormu

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3>Şifre Sıfırlama Ekranı</h3>

            </div>
            <div class="panel-body">
                @using (Html.BeginForm("SifreUnuttum", "Home", FormMethod.Post))
                {

                    <fieldset>
                       
                        <p>
                            <label>Şifre Sıfırlama</label>
                            @Html.TextBoxFor(a => a.KullaniciAdi, new { @class = "form-control" ,Placeholder="Email Giriniz"})
                        </p> 
                        <p>
                            <input type="submit" name="name" value="GİRİŞ YAP" class="btn btn-success" />
                        </p>
                        
                    </fieldset>
                    <div>
                        @if (ViewBag.Error != null)
                        {
                            <span>@ViewBag.Error</span>
                        }
                    </div>
                }
            </div>
            <div class="panel-footer">

            </div>

        </div>


    </div>
</div>
