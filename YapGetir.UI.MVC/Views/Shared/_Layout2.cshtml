<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        div a {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-3" style="background-color:white">
                <img src="~/Content/images/restoran/person.png" style="height:160px"/>
            </div>
            <div class="col-lg-9" style="background-color:white">
                <div class="col-lg-12" style="margin-top:90px">
                    <table>
                        <tr>
                            <td style="padding-right:40px">
                                <b>
                                    @Html.ActionLink("ANASAYFA", "Index", "Restoran")
                                </b>
                            </td>
                            <td style="padding-right:40px">
                                <b>
                                    @Html.ActionLink("STOK KONTROL", "Stok", "Restoran")
                                </b>
                            </td>
                            <td style="padding-right:40px">
                                <b>
                                    @Html.ActionLink("TEDARİKÇİLERİM", "Tedarikciler", "Restoran")
                                </b>
                            </td>
                            <td>
                                <b>
                                    @Html.ActionLink("AŞÇILARIM", "Ascilarim", "Restoran")
                                </b>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>


        <div class="col-lg-12"></div>
        <div class="row">
            <div class="col-lg-2">
                <h3 class="text-center">@{UyeFormu uye = (UyeFormu)Session["restoranKullanici"];} @uye.UyeAdi.ToUpper()</h3>
                <input type="submit" value="PROFİLİM" class="btn btn-primary btn-block" />
                @*<input type="submit" value="ÇIKIŞ" class="btn btn-primary btn-block" />*@
                @Html.ActionLink("ÇIKIŞ", "Cikis", "Restoran", new { area = "" }, new { @class = "btn btn-primary btn-block" })

            </div>
            <div class="col-lg-10">
                <div class="container">
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>