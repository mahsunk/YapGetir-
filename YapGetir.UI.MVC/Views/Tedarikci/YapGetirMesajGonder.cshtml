
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>YapGetir.com'a MesajGonder</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="col-lg-4"></div>
    <div class="col-lg-8">
        <div class="col-lg-1"><br /></div>
        <div class="col-lg-4">
            <p>@Html.ActionLink("Anasayfaya Dön", "Index", "Tedarikci", new { area = "" }, new { @class = "btn btn-primary" })</p>
            <h4>YapGetir.com'a Mesaj Gonder</h4>
            <p><input style="width:500px;" placeholder="Mesaj Başlığı" /></p>
            <p><textarea style="width:500px; height:500px" class="Mesaj" placeholder="İçerik"></textarea></p>
            <p><input type="submit" onclick="MesajGonder()" class="btn btn-primary" /></p>
            @*<p>@Html.ActionLink("Gönder", "mesajGonder", "Tedarikci", new { area = "" }, new { @class = "btn btn-primary", mesaj = "Mesaj Gönderildi" })</p>*@
        </div>
    </div>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        function MesajGonder() {
            alert("Mesaj gönderildi");
        }
    </script>
</body>
</html>
